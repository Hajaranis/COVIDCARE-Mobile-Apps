<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Homebg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/lightBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.923" />


    <TextView
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_text"
        android:layout_marginTop="50dp"
        android:layout_marginStart="160dp"
        android:fontFamily="@font/poppins"
        android:textSize="24dp"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Homebg"/>

    <ImageView
        android:id="@+id/home_virus"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/virus"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Homebg"/>

    <ImageView
        android:id="@+id/home_drCorona"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/drcorona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Homebg"/>

    <ImageView
        android:id="@+id/wavesBg"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="199dp"
        android:src="@drawable/ic_wave_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Homebg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-60dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wavesBg"
        >

        <TextView
            android:id="@+id/text_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Services"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="5dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/text_service"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_text_cases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:text="Case Update"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_text_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Newest Update today "
                    android:layout_marginLeft="5dp"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32 July 2020"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="}"
                    android:textSize="12sp"/>

            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/customborder"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardElevation="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            >

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_ellipse_green"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recovered"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginHorizontal="50dp"
                            >

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_ellipse_orange"
                                />

                            <TextView
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="3"/>

                            <TextView
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Infected"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            >

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_ellipse_red2"
                                />

                            <TextView
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"/>

                            <TextView
                                android:textSize="15dp"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Death"/>

                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_cases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                app:cardElevation="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/news_card"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="?android:selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/news_profile_image"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:paddingRight="8dp"
                                android:src="@drawable/ic_man"
                                app:civ_border_width="1dp"
                                app:civ_border_color="@android:color/darker_gray"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/news_profile_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Amir Khaidir bin Adzeman"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/news_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="32 JULY 2020"
                                    />

                                <TextView
                                    android:id="@+id/news_comma"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" , "
                                    />

                                <TextView
                                    android:id="@+id/news_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1:25 AM"/>


                            </LinearLayout>



                        </LinearLayout>




                    </LinearLayout>

                    <TextView
                        android:id="@+id/news_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:text="Selamat Datang! / Welcome"/>

                    <ImageView
                        android:id="@+id/news_image"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/undraw_welcome"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                app:cardElevation="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/news_card2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="?android:selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/news_profile_image2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:paddingRight="8dp"
                                android:src="@drawable/ic_man"
                                app:civ_border_width="1dp"
                                app:civ_border_color="@android:color/darker_gray"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/news_profile_name2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Amir Khaidir bin Adzeman"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/news_date2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="32 JULY 2020"
                                    />

                                <TextView
                                    android:id="@+id/news_comma2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" , "
                                    />

                                <TextView
                                    android:id="@+id/news_time2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1:25 AM"/>


                            </LinearLayout>



                        </LinearLayout>




                    </LinearLayout>

                    <TextView
                        android:id="@+id/news_message2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:text="Selamat Datang! / Welcome"/>

                    <ImageView
                        android:id="@+id/news_image2"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/undraw_welcome"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                app:cardElevation="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/news_card3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:clickable="true"
                        android:background="?android:selectableItemBackground">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/news_profile_image3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:paddingRight="8dp"
                                android:src="@drawable/ic_man"
                                app:civ_border_width="1dp"
                                app:civ_border_color="@android:color/darker_gray"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/news_profile_name3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Amir Khaidir bin Adzeman"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/news_date3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="32 JULY 2020"
                                    />

                                <TextView
                                    android:id="@+id/news_comma3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" , "
                                    />

                                <TextView
                                    android:id="@+id/news_time3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1:25 AM"/>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/news_message3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:text="Selamat Datang! / Welcome"/>

                    <ImageView
                        android:id="@+id/news_image3"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/undraw_welcome"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>